{{#if editor.hasSelection}}
  {{#tether-to-range range=editor.selectionRange}}
    <ul class="medium-toolbar-arrow-under">
      <li class="mobiledoc-toolbar__control">
        <button
          type="button"
          title="Bold"
          class="medium-editor-action medium-editor-action-bold medium-editor-button-first mobiledoc-toolbar__button {{if editor.activeMarkupTagNames.isStrong 'active'}}"
          {{action editor.toggleMarkup 'strong'}}>
          <b>b</b>
        </button>
      </li>
      <li class="mobiledoc-toolbar__control">
        <button
          type="button"
          title="Italic"
          class="mobiledoc-toolbar__button {{if editor.activeMarkupTagNames.isEm 'active'}}"
          {{action editor.toggleMarkup 'em'}}>
          <em>i</em>
        </button>
      </li>
      <li class="mobiledoc-toolbar__control">
        <button
          type="button"
          title="Link"
          class="mobiledoc-toolbar__button medium-editor-action-link medium-editor-button-last {{if editor.activeMarkupTagNames.isA 'active'}}"
          {{action editor.toggleLink}}>
          link
        </button>
      </li>
    </ul>
  {{/tether-to-range}}
{{/if}}
